#!/usr/bin/with-contenv bash
if [ "$SERVICE_ENABLE_DUMP1090" != "false" ]
then
	default_value() 
	{ 
		key=${1//\-/_DASH_}
		key=DUMP1090_${key^^}
		eval "value=\${$key:-\$2}"
		printf -v $key -- "$value"
		export $key
	}

	default_value "site_lat" "45.0"
	default_value "site_lon" "9.0"
	default_value "additional_args" ""
	/usr/lib/fr24/dump1090 --net --write-json /usr/lib/fr24/public_html/data --raw --quiet --lat ${DUMP1090_SITE_LAT} --lon ${DUMP1090_SITE_LON} ${DUMP1090_ADDITIONAL_ARGS}
else
	tail -f /dev/null
fi
